             x:Class="PaginaBinding.Views.TiempoView"
             xmlns:sistema="clr-namespace:System;assembly=mscorlib"
             xmlns:viewmodels="clr-namespace:PaginaBinding.ViewModels">
    <ContentPage.Content>
        <StackLayout>
            <!--Parte 1-->
