                <Label Text="{Binding StringFormat='Year: {0:yyyy}'}" HorizontalOptions="FillAndExpand" FontSize="30"/>
                <Label Text="{Binding StringFormat='Mes: {0:MMMM}'}" HorizontalOptions="FillAndExpand" FontSize="30"/>
